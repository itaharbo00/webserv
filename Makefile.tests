CC		= c++
CFLAGS	= -Wall -Wextra -Werror -std=c++98 -I includes

SRCS_SERVER	= srcs/Server/Server.cpp \
			  srcs/Server/Server_timeouts.cpp \
			  srcs/Server/Server_write.cpp
SRCS_HTTP	= srcs/HttpRequest/HttpRequest.cpp \
			  srcs/HttpRequest/HttpRequest_parsing.cpp \
			  srcs/HttpRequest/HttpRequest_body.cpp \
			  srcs/HttpRequest/HttpRequest_checkers.cpp \
			  srcs/HttpRequest/HttpRequest_getters.cpp
SRCS_RESPONSE = srcs/HttpResponse/HttpResponse.cpp
SRCS_ROUTER = srcs/Router/Router.cpp \
			  srcs/Router/Router_handlers.cpp \
			  srcs/Router/Router_methods.cpp \
			  srcs/Router/Router_serveStaticFile.cpp \
			  srcs/Router/Router_cgi.cpp \
			  srcs/Router/Router_cgi_env.cpp \
			  srcs/Router/Router_cgi_execute.cpp \
			  srcs/Router/Router_autoindex.cpp \
			  srcs/Router/Router_error_responses.cpp \
			  srcs/Router/Router_files_utils.cpp \
			  srcs/Router/Router_pages.cpp \
			  srcs/Router/Router_pages_2xx.cpp \
			  srcs/Router/Router_pages_3xx.cpp \
			  srcs/Router/Router_pages_4xx.cpp \
			  srcs/Router/Router_pages_5xx.cpp
SRCS_CONFIG = srcs/Config/Config.cpp \
			  srcs/Config/Config_parse_server.cpp \
			  srcs/Config/Config_parse_location.cpp \
			  srcs/Config/Config_server_directives.cpp \
			  srcs/Config/Config_location_directives.cpp \
			  srcs/Config/Config_utils.cpp \
			  srcs/Config/ServerConfig.cpp \
			  srcs/Config/ServerConfig_getters.cpp \
			  srcs/Config/ServerConfig_setters.cpp \
			  srcs/Config/LocationConfig.cpp \
			  srcs/Config/LocationConfig_setters.cpp \
			  srcs/Config/LocationConfig_getters.cpp

SRCS_ALL	= $(SRCS_SERVER) $(SRCS_HTTP) $(SRCS_RESPONSE) $(SRCS_ROUTER) $(SRCS_CONFIG)

TEST_SERVER			= tests/test_Server.cpp
TEST_HTTP			= tests/test_HttpRequest.cpp
TEST_RESPONSE		= tests/test_HttpResponse.cpp
TEST_ROUTER			= tests/test_Router.cpp
TEST_INTEGRATION	= tests/test_Server_integration.cpp
TEST_PARTIAL_SEND	= tests/test_partial_send.cpp
TEST_CONFIG			= tests/test_Config.cpp
TEST_LOCATION		= tests/test_LocationConfig.cpp
TEST_SERVERCONFIG	= tests/test_ServerConfig.cpp
TEST_METHODS		= tests/test_Router_methods.cpp
TEST_LOCATIONCONFIG_INTEGRATION = tests/test_Router_locationconfig.cpp
TEST_ROUTER_CGI		= tests/test_Router_cgi.cpp

TARGET_SERVER		= runTests_Server
TARGET_HTTP			= runTests_HttpRequest
TARGET_RESPONSE		= runTests_HttpResponse
TARGET_ROUTER		= runTests_Router
TARGET_INTEGRATION	= runTests_Integration
TARGET_PARTIAL_SEND	= runTests_PartialSend
TARGET_CONFIG		= runTests_Config
TARGET_LOCATION		= runTests_LocationConfig
TARGET_SERVERCONFIG	= runTests_ServerConfig
TARGET_METHODS		= runTests_Router_methods
TARGET_LOCATIONCONFIG_INTEGRATION = runTests_Router_LocationConfig
TARGET_ROUTER_CGI	= runTests_Router_CGI

all: $(TARGET_CONFIG) $(TARGET_LOCATIONCONFIG_FULL) $(TARGET_ROUTER) $(TARGET_SERVER) $(TARGET_INTEGRATION) $(TARGET_METHODS) $(TARGET_LOCATIONCONFIG_INTEGRATION)

# Tests unitaires Server uniquement
$(TARGET_SERVER): $(SRCS_ALL) $(TEST_SERVER)
	$(CC) $(CFLAGS) -o $(TARGET_SERVER) $(SRCS_ALL) $(TEST_SERVER)

# Tests unitaires HttpRequest uniquement
$(TARGET_HTTP): $(SRCS_HTTP) $(TEST_HTTP)
	$(CC) $(CFLAGS) -o $(TARGET_HTTP) $(SRCS_HTTP) $(TEST_HTTP)

# Tests unitaires HttpResponse uniquement
$(TARGET_RESPONSE): $(SRCS_RESPONSE) $(TEST_RESPONSE)
	$(CC) $(CFLAGS) -o $(TARGET_RESPONSE) $(SRCS_RESPONSE) $(TEST_RESPONSE)

# Tests unitaires Router uniquement
$(TARGET_ROUTER): $(SRCS_HTTP) $(SRCS_RESPONSE) $(SRCS_ROUTER) $(TEST_ROUTER)
	$(CC) $(CFLAGS) -o $(TARGET_ROUTER) $(SRCS_HTTP) $(SRCS_RESPONSE) $(SRCS_ROUTER) $(TEST_ROUTER)

# Tests d'int√©gration Server + HttpRequest + HttpResponse + Router
$(TARGET_INTEGRATION): $(SRCS_ALL) $(TEST_INTEGRATION)
	$(CC) $(CFLAGS) -o $(TARGET_INTEGRATION) $(SRCS_ALL) $(TEST_INTEGRATION)

# Test manuel d'envoi partiel
$(TARGET_PARTIAL_SEND): $(TEST_PARTIAL_SEND)
	$(CC) $(CFLAGS) -o $(TARGET_PARTIAL_SEND) $(TEST_PARTIAL_SEND)

# Tests Config
$(TARGET_CONFIG): $(SRCS_CONFIG) $(TEST_CONFIG)
	$(CC) $(CFLAGS) -o $(TARGET_CONFIG) $(SRCS_CONFIG) $(TEST_CONFIG)

$(TARGET_LOCATION): $(SRCS_CONFIG) $(TEST_LOCATION)
	$(CC) $(CFLAGS) -o $(TARGET_LOCATION) srcs/Config/LocationConfig.cpp srcs/Config/LocationConfig_setters.cpp $(TEST_LOCATION)

$(TARGET_SERVERCONFIG): $(SRCS_CONFIG) $(TEST_SERVERCONFIG)
	$(CC) $(CFLAGS) -o $(TARGET_SERVERCONFIG) srcs/Config/ServerConfig.cpp srcs/Config/ServerConfig_getters.cpp srcs/Config/ServerConfig_setters.cpp srcs/Config/LocationConfig.cpp srcs/Config/LocationConfig_setters.cpp $(TEST_SERVERCONFIG)

# Tests Router methods (POST/DELETE)
$(TARGET_METHODS): $(SRCS_ROUTER) $(TEST_METHODS)
	$(CC) $(CFLAGS) $(INCLUDES) -o $(TARGET_METHODS) $(SRCS_ROUTER) $(TEST_METHODS)

# Tests Router + LocationConfig integration
$(TARGET_LOCATIONCONFIG_INTEGRATION): $(SRCS_HTTP) $(SRCS_RESPONSE) $(SRCS_ROUTER) $(SRCS_CONFIG) $(TEST_LOCATIONCONFIG_INTEGRATION)
	$(CC) $(CFLAGS) -o $(TARGET_LOCATIONCONFIG_INTEGRATION) $(SRCS_HTTP) $(SRCS_RESPONSE) $(SRCS_ROUTER) $(SRCS_CONFIG) $(TEST_LOCATIONCONFIG_INTEGRATION)

# Tests Router CGI
$(TARGET_ROUTER_CGI): $(SRCS_HTTP) $(SRCS_RESPONSE) $(SRCS_ROUTER) $(SRCS_CONFIG) $(TEST_ROUTER_CGI)
	$(CC) $(CFLAGS) -o $(TARGET_ROUTER_CGI) $(SRCS_HTTP) $(SRCS_RESPONSE) $(SRCS_ROUTER) $(SRCS_CONFIG) $(TEST_ROUTER_CGI)

run_server: $(TARGET_SERVER)
	./$(TARGET_SERVER)

run_http: $(TARGET_HTTP)
	./$(TARGET_HTTP)

run_response: $(TARGET_RESPONSE)
	./$(TARGET_RESPONSE)

run_router: $(TARGET_ROUTER)
	./$(TARGET_ROUTER)

run_integration: $(TARGET_INTEGRATION)
	./$(TARGET_INTEGRATION)

run_partial_send: $(TARGET_PARTIAL_SEND)
	./$(TARGET_PARTIAL_SEND)

run_config: $(TARGET_CONFIG)
	./$(TARGET_CONFIG)

run_location: $(TARGET_LOCATION)
	./$(TARGET_LOCATION)

run_serverconfig: $(TARGET_SERVERCONFIG)
	./$(TARGET_SERVERCONFIG)

run_methods: $(TARGET_METHODS)
	./$(TARGET_METHODS)

run_router_locationconfig: $(TARGET_LOCATIONCONFIG_INTEGRATION)
	./$(TARGET_LOCATIONCONFIG_INTEGRATION)

run_router_cgi: $(TARGET_ROUTER_CGI)
	./$(TARGET_ROUTER_CGI)

run_all: run_http run_response run_router run_server run_integration run_config run_methods run_router_locationconfig run_router_cgi

clean:
	rm -f $(TARGET_SERVER) $(TARGET_HTTP) $(TARGET_RESPONSE) $(TARGET_ROUTER) $(TARGET_INTEGRATION) $(TARGET_PARTIAL_SEND) $(TARGET_CONFIG) $(TARGET_LOCATION) $(TARGET_SERVERCONFIG) $(TARGET_METHODS) $(TARGET_LOCATIONCONFIG_INTEGRATION) $(TARGET_ROUTER_CGI)

.PHONY: all run_server run_http run_response run_router run_integration run_partial_send run_config run_location run_serverconfig run_methods run_router_locationconfig run_router_cgi run_all clean
